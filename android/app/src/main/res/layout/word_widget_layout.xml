<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:background="@drawable/widget_background"
    android:padding="16dp"
    android:gravity="center"
    android:orientation="vertical">

    <!-- Üst Kısım: Kelime ve Tür -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/word_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="Discover"
            android:textColor="@android:color/white"
            android:textSize="@dimen/widget_text_large"
            android:textStyle="bold"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/speaker_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_speaker"
            android:tint="@android:color/white"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/word_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adjective"
        android:textColor="@android:color/white"
        android:textSize="@dimen/widget_text_small"
        android:textStyle="italic"
        android:gravity="center"
        android:layout_marginTop="2dp"/>


    <!-- Ayırıcı Çizgi: View yerine TextView kullandık -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="8dp"
        android:background="@android:color/white" />

    <!-- Alt Kısım: Anlam -->
    <TextView
        android:id="@+id/meaning_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Keşfetmek"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:gravity="center" />
</LinearLayout>